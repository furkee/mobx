{
    "extends": "airbnb",

    "env": {
        "jest": true,
        "browser": true
    },

    "parser": "babel-eslint",

    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
          "experimentalObjectRestSpread": true,
          "experimentalDecorators": true
        }
      },

    "rules": {
        "brace-style": ["error", "stroustrup"],
        "react/prefer-stateless-function": [0, {
            "ignorePureComponents": true
        }],
        "react/jsx-filename-extension": [0,
            { "extensions": [ ".test.js" ] }
        ]
    }
}